#include <stdio.h>

int main(void)
{
	int a = 10;
	int *p;
	int **pp;
	p = &a;
	pp = &p;
	printf("sizeof(a) = %u\n", sizeof(a));
	printf("sizeof(p) = %u\n", sizeof(p));
	printf("sizeof(pp) = %u\n", sizeof(pp));

	printf("&p = %u\n", &p); // 200
	printf("p = %u\n", p); // 100
	printf("*p = %u\n", *p); // 10
	printf("&pp = %u\n", &pp); // 300
	printf("pp = %u\n", pp); // 200
	printf("*pp = %u\n", *pp); // 100
	printf("**pp = %u\n", **pp); // 10
	//printf("***pp = %u\n", ***pp); // error
	return 0;
}


